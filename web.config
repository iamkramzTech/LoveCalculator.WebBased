<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<system.webServer>
		<!-- Set up handler for ASP.NET Core application -->
		<handlers>
			<add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
		</handlers>

